Alphabet

%[%-hab%]:0 %[%+hab%]:0
%[%-fut%]:0 %[%+fut%]:0

;

Rules

"Remove paths without matching suffix feature"
Fx:0 /<= _ ;
    except
      _ :* Fy:0 ;
    where Fx in ( %[%-hab%] %[%-fut%] )
        Fy in ( %[%+hab%] %[%+fut%] )
    matched ;

"Remove paths without matching prefix feature"
    Fx:0 /<= _ ;
       except
           Fy:0 :* _ ;
       where Fy in ( %[%-hab%] %[%-fut%] )
             Fx in ( %[%+hab%] %[%+fut%] )
    matched ;
